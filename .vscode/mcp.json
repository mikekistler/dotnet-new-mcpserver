{
  "inputs": [
    {
      "type": "promptString",
      "id": "weather_choices",
      "description": "Comma separated list of weather descriptions to randomly select.",
      "password": false
    }
  ],
  "servers": {
    "mikekistler.SampleMcpServer": {
      "type": "stdio",
      "command": "dnx",
      "args": ["mikekistler.SampleMcpServer@0.1.0-beta", "--yes"],
      "env": {
        "WEATHER_CHOICES": "${input:weather_choices}"
      }
    }
  }
}